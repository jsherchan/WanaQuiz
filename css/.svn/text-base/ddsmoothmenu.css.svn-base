.ddsmoothmenu{
/*font: bold 12px Verdana;*/
/*background: #414141;*/ /*background of menu bar (default state)*/
width: 100%;
font-size:17px; 
color:#00CCFF;
}

.ddsmoothmenu ul, .ddsmoothmenu_1 ul{
z-index:100;
margin: 0;
padding: 10px 0 0 30px;
list-style-type: none;
}
.ddsmoothmenu_1 ul{
padding: 0px;
}/*Top level list items*/
.ddsmoothmenu ul li, .ddsmoothmenu_1 ul li{
position: relative;
float:left; width:auto; display:inline; background:url(../images/tab_blue.jpg) no-repeat top left; padding-left:25px; padding-bottom:5px;
}.ddsmoothmenu_1 ul li{
    padding:0 10px;
}
.ddsmoothmenu_1 ul li a{
    padding:0 !important;
}
.ddsmoothmenu ul li.navselected{ position: relative;
float:left; width:auto; background:url(../images/tab_green.jpg) no-repeat top left; padding-left:25px; padding-bottom:5px;

}
.ddsmoothmenu_1 ul li{
    padding:0;  
    background-image:none;
}
/*Top level menu link items style*/
.ddsmoothmenu ul li a{
	float:left; width:auto;
display: block;
background:url(../images/tab_blue.jpg) no-repeat top right; padding-right:25px; line-height:45px; padding-bottom:5px;
/*background: #414141;*/ /*background of menu items (default state)*/
color: #00CCFF;
/*padding: 8px 10px;
border-right: 1px solid #778;
color: #2d2b2b;
text-decoration: none;*/
/*letter-spacing:-0.03em;
word-spacing:-0.04em;*/
text-shadow:1px 1px rgba(255,255,255,0.5);
}
.ddsmoothmenu_1 ul li a{
    
}
.ddsmoothmenu ul li.navselected a{ background:url(../images/tab_green.jpg) no-repeat top right; float:left; width:auto;
display: block; padding-right:25px;  padding-bottom:5px; line-height:45px; color:#316D03; }
* html .ddsmoothmenu ul li a{ /*IE6 hack to get sub menu links to behave correctly*/
display: inline-block;
}

.ddsmoothmenu ul li a:visited{
color: #0084C4;
}

.ddsmoothmenu ul li a.selected{ /*CSS class that's dynamically added to the currently active menu items' LI A element*/
/*background: black;*/ 
color: #0084C4;
}

.ddsmoothmenu ul li a:hover{
/*background: black;*/ /*background of menu items during onmouseover (hover state)*/
color: #006F8A;
text-decoration:none;
}
	
/*1st sub level menu*/
.ddsmoothmenu ul li ul{
position: absolute;
left: 0;
display: none; /*collapse all sub menus to begin with*/
visibility: hidden;
border:1px solid #B3DDEB;
background-color:#FFF;
margin:0px; padding:0px;
font-size:14px;
z-index:200;
}
.ddsmoothmenu_1 ul li ul{
    position: absolute;
left: 0;
display: none; /*collapse all sub menus to begin with*/
visibility: hidden;
border:1px solid #B3DDEB;
background-color:#FFF;
margin:0px; padding:0px 0px 0px 0px;
font-size:14px;
z-index:20000;
width:260px;
}
.ddsmoothmenu_1 ul ul li{
    
    display:bolck;
    float:none;
    clear:both;
}
.ddsmoothmenu_1 ul ul li a{text-indent:10px;}
.ddsmoothmenu_1 ul ul a:hover{color:#0066CC; background-color:#E6F2D2;}
.ddsmoothmenu_1 .downarrowclass{right:-10px; top:19px;}
/*Sub level menu list items (undo style from Top level List Items)*/
.ddsmoothmenu ul li ul li{
display: list-item;
float: none;
background:none;
margin:0px;
padding:0px;
}
.ddsmoothmenu ul li.navselected ul li{ background:none; }

/*All subsequent sub menu levels vertical offset after 1st level sub menu */
.ddsmoothmenu ul li ul li ul{
top: 0;
}

/* Sub level menu links style */
.ddsmoothmenu ul li ul li a{
    position:relative;
    z-index:300;
width: 160px; /*width of sub menus*/
padding: 0px 0 0 5px;
margin: 1px 0px 0px 1px;
border-top-width: 0;
border-bottom: 1px solid #B3DDEB;
background:#E2F3ED;
height:30px; line-height:30px;
}
.ddsmoothmenu ul li.navselected ul li a{
background:none; width: 160px; /*width of sub menus*/
padding: 0px 0 0 5px;
margin: 1px 0px 0px 1px;
border-top-width: 0;
border-bottom: 1px solid #B3DDEB;
background:#E2F3ED;
height:30px; line-height:30px;
color: #00CCFF;
}
.ddsmoothmenu ul li.navselected ul li a:hover{ color: #006F8A; }
/* Holly Hack for IE \*/
* html .ddsmoothmenu{height: 1%;} /*Holly Hack for IE7 and below*/


/* ######### CSS classes applied to down and right arrow images  ######### */

.downarrowclass{
position: absolute;
top: 22px;
right: 28px;
}

.rightarrowclass{
position: absolute;
top: 8px;
right: 10px;
}

/* ######### CSS for shadow added to sub menus  ######### */

.ddshadow{
position: absolute;
left: 0;
top: 0;
width: 0;
height: 0;
background: silver;
}

.toplevelshadow{ /*shadow opacity. Doesn't work in IE*/
opacity: 0.8;
}